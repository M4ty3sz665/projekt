<Window x:Class="projekt.kopapirollo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:projekt"
        mc:Ignorable="d"
        Title="kopapirollo" Height="550" Width="800"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        Background="Transparent"
        
        
        
    MouseDown="Window_MouseDown"
        
    >

    <Border CornerRadius="12">
        <Border.Background>
            <ImageBrush
                ImageSource="/images/back_image.jpg"
                >

            </ImageBrush>
        </Border.Background>
        <Border
        
        
        CornerRadius="10"
        Opacity="0.85"
        BorderThickness="5"
        >
            <Border.BorderBrush>
                <LinearGradientBrush
                StartPoint="0,0"
                EndPoint="1,1"
                >
                    <GradientStop Color="#462Ad8" Offset="0"/>
                    <GradientStop Color="#Da34a4" Offset="0.75"/>
                    <GradientStop Color="#8a16c1" Offset="1"/>
                </LinearGradientBrush>
            </Border.BorderBrush>
            <Border.Background>
                <LinearGradientBrush
                StartPoint="0,1"
                EndPoint="1,0"
                >
                    <GradientStop Color="#060531" Offset="0"/>
                    <GradientStop Color="#1b1448" Offset="0.75"/>

                </LinearGradientBrush>
            </Border.Background>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30" />
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="5"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock
                        Text="Rock-Paper-Scissors"
                        Foreground="DarkGray"
                        FontSize="15 "
                        Grid.Column="0"
                        VerticalAlignment="Center"
                        Margin="10,0,0,0"
                        >

                    </TextBlock>

                    <Button
                        x:Name="btnMinimize"
                        
                        Content="-"
                        Foreground="White"
                        FontSize="15"
                        FontFamily="Montserrat"
                        Cursor="Hand"
                        Grid.Column="1"
                        Click="btnMinimize_Click"
                        >

                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter
                                    Property="Background" Value="#28aaed"
                                    >

                                </Setter>
                                <Style.Triggers>
                                    <Trigger
                                        Property="IsMouseOver" Value="True"
                                        >
                                        <Setter
                                            Property="Background" Value="#278bef"
                                            >

                                        </Setter>
                                    </Trigger>
                                    <Trigger
                                        Property="IsKeyboardFocused" Value="True"
                                        >
                                        <Setter
                                            Property="Background" Value="#278bef"
                                            >

                                        </Setter>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>

                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border
                                    Height="18"
                                    Width="18"
                                    CornerRadius="9"
                                    Background="{TemplateBinding Background}"
                                    >
                                    <ContentPresenter VerticalAlignment="Center"
                                                      HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>

                    </Button>

                    <Button
                        x:Name="btnClose"
                        
                        Content="X"
                        Foreground="White"
                        FontSize="15"
                        FontFamily="Montserrat"
                        Cursor="Hand"
                        Grid.Column="2"
                        Click="btnClose_Click"
                        >

                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter
                                    Property="Background" Value="Red"
                                    >

                                </Setter>
                                <Style.Triggers>
                                    <Trigger
                                        Property="IsMouseOver" Value="True"
                                        >
                                        <Setter
                                            Property="Background" Value="DarkRed"
                                            >

                                        </Setter>
                                    </Trigger>
                                    <Trigger
                                        Property="IsKeyboardFocused" Value="True"
                                        >
                                        <Setter
                                            Property="Background" Value="DarkRed"
                                            >

                                        </Setter>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>

                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border
                                    Height="18"
                                    Width="18"
                                    CornerRadius="9"
                                    Background="{TemplateBinding Background}"
                                    >
                                    <ContentPresenter VerticalAlignment="Center"
                                                      HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>

                    </Button>

                </Grid>

                <Button  HorizontalAlignment="Left" Margin="102,205,0,0" Grid.Row="1" VerticalAlignment="Top" Width="92" Height="79" Click="paper_Click">
                    <Button.Background
                        
                        >
                        <ImageBrush ImageSource="paper.jpg" />
                    </Button.Background>

                </Button>

                <Button  HorizontalAlignment="Left" Margin="352,205,0,0" Grid.Row="1" VerticalAlignment="Top" Width="92" Height="79" Click="scissors_Click">
                    <Button.Background>
                        <ImageBrush ImageSource="scissors.jpg"/>
                    </Button.Background>

                </Button>

                <Button  HorizontalAlignment="Left" Margin="596,205,0,0" Grid.Row="1" VerticalAlignment="Top" Width="92" Height="79" Click="rock_Click">
                    <Button.Background>
                        <ImageBrush ImageSource="rock.jpg"/>
                    </Button.Background>
                </Button>

                <TextBlock HorizontalAlignment="Left" Margin="26,33,0,0" Grid.Row="1" TextWrapping="Wrap"  VerticalAlignment="Top" Text="Válassz a megadottak közül és játsz a gép ellen egy vagy több kő-paír-olló játékot!"
                           Foreground="White"
                           FontSize="20" Width="744"/>

                <Label Content="Győzelem:" HorizontalAlignment="Left" Margin="208,118,0,0" Grid.Row="1" VerticalAlignment="Top" RenderTransformOrigin="6.716,0.338" Foreground="White" FontSize="18"/>


                <Label Content="Vesztéseg:" HorizontalAlignment="Left" Margin="352,118,0,0" Grid.Row="1" VerticalAlignment="Top" Foreground="White" FontSize="18"/>

                <Label Content="Döntetlen:" HorizontalAlignment="Left" Margin="504,118,0,0" Grid.Row="1" VerticalAlignment="Top" Foreground="White" FontSize="18" />

                <Label Content="win/lsoe/draw" HorizontalAlignment="Left" Margin="352,345,0,0" Grid.Row="1" VerticalAlignment="Top" Foreground="White" FontSize="18"/>





            </Grid>


        </Border>
    </Border>
</Window>
