<Window x:Class="projekt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:projekt"
        mc:Ignorable="d"
        Title="MainWindow" Height="550" Width="800"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        Background="Transparent"
        
        
        
    MouseDown="Window_MouseDown"
        
    >

    <Border CornerRadius="12">
        <Border.Background>
            <ImageBrush
                ImageSource="/images/back_image.jpg"
                >
                
            </ImageBrush>
        </Border.Background>
    <Border
        
        
        CornerRadius="10"
        Opacity="0.85"
        BorderThickness="5"
        >
        <Border.BorderBrush>
            <LinearGradientBrush
                StartPoint="0,0"
                EndPoint="1,1"
                >
                <GradientStop Color="#462Ad8" Offset="0"/>
                <GradientStop Color="#Da34a4" Offset="0.75"/>
                <GradientStop Color="#8a16c1" Offset="1"/>
            </LinearGradientBrush>
        </Border.BorderBrush>
        <Border.Background>
            <LinearGradientBrush
                StartPoint="0,1"
                EndPoint="1,0"
                >
                <GradientStop Color="#060531" Offset="0"/>
                <GradientStop Color="#1b1448" Offset="0.75"/>
                
            </LinearGradientBrush>
        </Border.Background>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30" />
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="5"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock
                        Text="LOG IN"
                        Foreground="DarkGray"
                        FontSize="10 "
                        Grid.Column="0"
                        VerticalAlignment="Center"
                        Margin="10,0,0,0"
                        >
                        
                    </TextBlock>

                    <Button
                        x:Name="btnMinimize"
                        
                        Content="-"
                        Foreground="White"
                        FontSize="15"
                        FontFamily="Montserrat"
                        Cursor="Hand"
                        Grid.Column="1"
                        Click="btnMinimize_Click"
                        >
                        
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter
                                    Property="Background" Value="#28aaed"
                                    >
                                   
                                </Setter>
                                <Style.Triggers>
                                    <Trigger
                                        Property="IsMouseOver" Value="True"
                                        >
                                        <Setter
                                            Property="Background" Value="#278bef"
                                            >
                                            
                                        </Setter>
                                    </Trigger>
                                    <Trigger
                                        Property="IsKeyboardFocused" Value="True"
                                        >
                                        <Setter
                                            Property="Background" Value="#278bef"
                                            >

                                        </Setter>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>

                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border
                                    Height="18"
                                    Width="18"
                                    CornerRadius="9"
                                    Background="{TemplateBinding Background}"
                                    >
                                    <ContentPresenter VerticalAlignment="Center"
                                                      HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        
                    </Button>

                    <Button
                        x:Name="btnClose"
                        
                        Content="X"
                        Foreground="White"
                        FontSize="15"
                        FontFamily="Montserrat"
                        Cursor="Hand"
                        Grid.Column="2"
                        Click="btnClose_Click"
                        >

                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter
                                    Property="Background" Value="Red"
                                    >

                                </Setter>
                                <Style.Triggers>
                                    <Trigger
                                        Property="IsMouseOver" Value="True"
                                        >
                                        <Setter
                                            Property="Background" Value="DarkRed"
                                            >

                                        </Setter>
                                    </Trigger>
                                    <Trigger
                                        Property="IsKeyboardFocused" Value="True"
                                        >
                                        <Setter
                                            Property="Background" Value="DarkRed"
                                            >

                                        </Setter>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>

                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border
                                    Height="18"
                                    Width="18"
                                    CornerRadius="9"
                                    Background="{TemplateBinding Background}"
                                    >
                                    <ContentPresenter VerticalAlignment="Center"
                                                      HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>

                    </Button>

                </Grid>


                <StackPanel Width="250" Grid.Row="1" Orientation="Vertical"
                            Margin="0,35,0,0">

                    <Image
                        Source="/images/rps.png" Width="100" Height="100"
                        >
                        
                    </Image>
                    <TextBlock
                        Text="Kő-Papír-Olló"
                        Foreground="White"
                        FontSize="15"
                        FontFamily="Montserrat"
                        FontWeight="Medium"
                        HorizontalAlignment="Center"
                        >
                        
                    </TextBlock>

                    <TextBlock
                        Text="Játsz egy kör Kő-Papír-Olló-t!"
                        Foreground="LightGray"
                        FontSize="12"
                        FontFamily="Montserrat"
                        FontWeight="Medium"
                        TextWrapping="Wrap"
                        TextAlignment="Center"
                        >

                    </TextBlock>


                    <TextBlock Text="Username"
                               Foreground="DarkGray"
                               FontSize="12"
                               FontWeight="Medium"
                               FontFamily="Montserrat"
                               Margin="0,35,0,0"
                               />
                                
                    
                    <TextBox x:Name="txtUser"
                             FontSize="13"
                             FontWeight="Medium"
                             FontFamily="Montserrat"
                             Background="Transparent"
                             Foreground="White"
                             CaretBrush="LightGray"
                             BorderBrush="DarkGray"
                             BorderThickness="0,0,0,1"
                             Height="28"
                             VerticalAlignment="Center"
                             Margin="0,5,0,0"
                             Padding="20,0,0,0"
                             TabIndex="1">
                        
                    </TextBox>

                    <TextBlock Text="Password"
                               Foreground="DarkGray"
                               FontSize="12"
                               FontWeight="Medium"
                               FontFamily="Montserrat"
                               Margin="0,15,0,0"/>

                    <PasswordBox x:Name="txtPass"
                             FontSize="13"
                             FontWeight="Medium"
                             FontFamily="Montserrat"
                             Background="Transparent"
                             Foreground="White"
                             CaretBrush="LightGray"
                             BorderBrush="DarkGray"
                             BorderThickness="0,0,0,1"
                             Height="28"
                             VerticalAlignment="Center"
                             Margin="0,5,0,0"
                             Padding="20,0,0,0"
                                 TabIndex="2">

                    </PasswordBox>

                    <Button
                        x:Name="btnLogin"
                        Content="LOG IN"
                        Foreground="White"
                        FontSize="15"
                        FontFamily="Montserrat"
                        Cursor="Hand"
                        Grid.Column="2"
                        Margin="0,50,0,0"
                        Click="btnLogin_Click"
                        TabIndex="3">

                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#462Ad8"/>
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#000000" BlurRadius="5" ShadowDepth="0"/>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#8a16c1"/>
                                        <Setter Property="Effect">
                                            <Setter.Value>
                                                <DropShadowEffect Color="#8a16c1" BlurRadius="15" ShadowDepth="0"/>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                    <Trigger Property="IsKeyboardFocused" Value="True">
                                        <Setter Property="Background" Value="#8a16c1"/>
                                        <Setter Property="Effect">
                                            <Setter.Value>
                                                <DropShadowEffect Color="#8a16c1" BlurRadius="20" ShadowDepth="0"/>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>

                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border
                Height="40"
                Width="150"
                CornerRadius="20"
                Background="{TemplateBinding Background}"
                BorderThickness="2"
                BorderBrush="Transparent">
                                    <ContentPresenter VerticalAlignment="Center"
                                  HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    <Button
                        x:Name="ASD"
                        Content="REGISTER"
                        Foreground="White"
                        FontSize="15"
                        FontFamily="Montserrat"
                        Cursor="Hand"
                        Grid.Column="2"
                        Margin="0,10,0,0"
                        Click="RegistrationButton_Click"
                        TabIndex="3">

                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#462Ad8"/>
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#000000" BlurRadius="5" ShadowDepth="0"/>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#8a16c1"/>
                                        <Setter Property="Effect">
                                            <Setter.Value>
                                                <DropShadowEffect Color="#8a16c1" BlurRadius="15" ShadowDepth="0"/>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                    <Trigger Property="IsKeyboardFocused" Value="True">
                                        <Setter Property="Background" Value="#8a16c1"/>
                                        <Setter Property="Effect">
                                            <Setter.Value>
                                                <DropShadowEffect Color="#8a16c1" BlurRadius="20" ShadowDepth="0"/>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>

                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border
                Height="40"
                Width="150"
                CornerRadius="20"
                Background="{TemplateBinding Background}"
                BorderThickness="2"
                BorderBrush="Transparent">
                                    <ContentPresenter VerticalAlignment="Center"
                                  HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>


                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                Margin="0,15,0,0">
                        
                    
                    </StackPanel>
                </StackPanel>

            </Grid>
            
        
    </Border>
    </Border>
</Window>
